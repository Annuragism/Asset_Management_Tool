<body>
  <script>
  $(document).ready(function(){
    $('#mid').hide();
    $('#Emp_id').hide();
    $('#Manager_id').hide();
    $('#Support_id').hide();
    })
function blocks() {

      var designation=$('#designation').val();
      if(designation=='Employee')
      {
      $('#mid').show();
      $('#Emp_id').show();
      $('#Manager_id').hide();
      $('#Support_id').hide();
      }
      else if (designation=='Manager') {
        $('#Manager_id').show();
        $('#Emp_id').hide();
        $('#Support_id').hide();
        $('#mid').hide();

      }
      else if (designation=='Support') {
        $('#Support_id').show();
        $('#Manager_id').hide();
        $('#Emp_id').hide();
        $('#mid').hide();

      }
      else {
        $('#mid').hide();
        $('#Manager_id').hide();
        $('#Emp_id').hide();
        $('#Support_id').hide();


      }


  }

      </script>
