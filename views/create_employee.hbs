<div class="main">
  <div class="jumbotron">
  <h2>Create Employee</h2>
</div>
<div class="justify-content-md-between" style="width:600px; margin-left:300px; margin-bottom:50px;">
<form action="create_employee" method="post">
  <div class="form-group">
        <label for="email">Enter First name:</label>
        <input type="text" class="form-control" id="fname"  name="fname">
      </div>
      <div class="form-group">
            <label for="email">Enter Last name:</label>
            <input type="text" class="form-control" id="lname"  name="lname">
          </div>

          <div class="form-group">
                <label for="email">Enter Emaild:</label>
                <input type="email" class="form-control" id="email"  name="email">
          </div>
      <div class="form-group">
        <label for="pwd"> Password:</label>
        <input type="password" class="form-control" id="pwd"  name="pwd">
      </div>

      <div class="form-group">
            <label for="email">Enter Mobile number:</label>
            <input type="text" class="form-control" id="lname"  name="mobile">
      </div>
      <div class="form-group">
            <label for="email">Enter your Designation:</label>
            <select class="form-control" id="designation" onclick="blocks()" name="designation">
              <option>--Select--</option>
              <option>Employee</option>
              <option>Manager</option>
              <option>Support</option>
            </select>
      </div>
      <div class="form-group" id="Emp_id">
            <label for="email">Enter Employee id:(should be E-1,E-2...etc)</label>
            <input type="text" class="form-control" id="Employee"  name="Employee" value="E-">
      </div>
       <div class="form-group" id="Manager_id">
              <label for="email">Enter Manager id:(should be M-1,M-2...etc)</label>
              <input type="text" class="form-control" id="Manager"  name="Manager" value="M-">
        </div>
        <div class="form-group" id="Support_id">
              <label for="email">Enter Support id:(should be S-1,S-2...etc)</label>
              <input type="text" class="form-control" id="Support"  name="Support" value="S-">
        </div>
      <div class="form-group" id="mid">
            <label for="email">Belongs to which manager:</label>
            <select class="form-control" id="mid"  name="mid">
              {{#each ManagerResult}}
              <option value="{{this.Manager_id}}">{{this.Manager_id}}({{this.First_name}}{{this.Last_name}})</option>
              {{/each}}
            </select>
      </div>

      <button type="submit" class="btn btn-primary">Create Emoployee</button>
</form>
